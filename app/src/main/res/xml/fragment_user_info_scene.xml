<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/user_info_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_top_for_user_info_card_view"
            motion:cardCornerRadius="@dimen/corner_radius_for_user_info_card_view"/>
        <Constraint android:id="@+id/user_info_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_top_for_user_info_name"
            motion:layout_constraintEnd_toStartOf="@id/user_info_guideline_right" />
        <Constraint android:id="@+id/user_info_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_top_for_user_info_name"
            motion:layout_constraintEnd_toStartOf="@id/user_info_guideline_right" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/user_info_card_view"
            android:layout_width="@dimen/height_and_width_for_user_info_card_view"
            android:layout_height="@dimen/height_and_width_for_user_info_card_view"
            android:layout_marginTop="@dimen/margin_top_for_user_info_card_view"
            android:layout_marginEnd="@dimen/margin_end_for_user_info_card_view"
            motion:cardCornerRadius="@dimen/corner_radius_for_user_info_card_view"
            motion:layout_constraintEnd_toStartOf="@id/user_info_guideline_right"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint android:id="@+id/user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_for_user_info_name"
            motion:layout_constraintStart_toStartOf="@id/user_info_guideline_left"
            motion:layout_constraintTop_toTopOf="parent"/>
        <Constraint android:id="@+id/user_info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_for_user_info_email"
            motion:layout_constraintStart_toEndOf="@id/user_info_guideline_left"
            motion:layout_constraintTop_toBottomOf="@+id/user_info_name" />
    </ConstraintSet>

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@+id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2000"/>
</MotionScene>
