<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/movie_details_film_poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/empty_string"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/movie_details_description_cardView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/movie_details_description_cardView"
        style="@style/CustomCardCorners"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/height_for_bottom_navigation_view"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/movie_details_film_poster"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/movie_details_guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/guideline_right_and_left_for_description_card_view" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/movie_details_guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_end="@dimen/guideline_right_and_left_for_description_card_view" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/movie_details_guideline_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="@dimen/guideline_top_for_description_card_view" />

                <TextView
                    android:id="@+id/movie_details_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frame_for_text_genre"
                    android:paddingStart="@dimen/padding_start_and_end_for_genre"
                    android:paddingTop="@dimen/padding_top_and_bottom_for_genre"
                    android:paddingEnd="@dimen/padding_start_and_end_for_genre"
                    android:paddingBottom="@dimen/padding_top_and_bottom_for_genre"
                    android:text="@string/genre"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_for_genre"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="@+id/movie_details_guideline_left"
                    app:layout_constraintTop_toTopOf="@+id/movie_details_guideline_top" />

                <TextView
                    android:id="@+id/movie_details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_genre_and_date"
                    android:layout_marginTop="@dimen/margin_top_for_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_for_date"
                    android:typeface="normal"
                    app:layout_constraintStart_toEndOf="@+id/movie_details_genre"
                    app:layout_constraintTop_toTopOf="@+id/movie_details_guideline_top" />

                <TextView
                    android:id="@+id/movie_details_age_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_for_age_limit"
                    android:background="@drawable/frame_for_text_age_limit"
                    android:paddingStart="@dimen/padding_start_for_age_limit"
                    android:paddingTop="@dimen/padding_top_for_age_limit"
                    android:paddingEnd="@dimen/padding_start_for_age_limit"
                    android:paddingBottom="@dimen/padding_top_for_age_limit"
                    android:text="@string/empty_string"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_for_age_limit"
                    android:typeface="normal"
                    app:layout_constraintEnd_toStartOf="@+id/movie_details_guideline_right"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/movie_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_genre_and_name"
                    android:text="@string/empty_string"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_for_name"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="@+id/movie_details_guideline_left"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_genre" />

                <RatingBar
                    android:id="@+id/movie_details_rating_bar"
                    style="@style/CustomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_for_stars_from_name"
                    android:isIndicator="true"
                    app:layout_constraintStart_toStartOf="@+id/movie_details_guideline_left"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_name" />

                <TextView
                    android:id="@+id/movie_details_film_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_for_film_description"
                    android:text="@string/empty_string"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_for_film_description"
                    android:typeface="normal"
                    app:layout_constraintEnd_toStartOf="@+id/movie_details_guideline_right"
                    app:layout_constraintStart_toStartOf="@+id/movie_details_guideline_left"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_rating_bar" />

                <TextView
                    android:id="@+id/movie_details_title_for_actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_for_title_for_actors"
                    android:text="@string/title_for_actors"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_for_title_for_actors"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="@+id/movie_details_guideline_left"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_film_description" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/movie_details_recycler_view_for_actors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/movie_details_guideline_left"
                    app:layout_constraintEnd_toStartOf="@+id/movie_details_guideline_right"
                    app:layout_constraintTop_toBottomOf="@+id/movie_details_title_for_actors"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>